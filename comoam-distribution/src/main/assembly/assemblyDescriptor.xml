<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>tar</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/apache-tomcat-${tomcat.version}
			</directory>
			<outputDirectory>/server</outputDirectory>
			<excludes>
				<exclude>**/webapps/docs/**</exclude>
				<exclude>**/webapps/examples/**</exclude>
				<exclude>**/webapps/host-manager/**</exclude>
				<exclude>**/webapps/manager/**</exclude>
				<exclude>**/webapps/ROOT/**</exclude>
				<exclude>**/conf/server.xml</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/comoam-playbook</directory>
			<outputDirectory>/playbook</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/script</directory>
			<outputDirectory>/script</outputDirectory>
			<excludes>
				<exclude>install.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/datasource</directory>
			<outputDirectory>/datasource</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/script/install.sh</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>src/main/config/tomcat/conf/server.xml</source>
			<outputDirectory>/server/conf/</outputDirectory>
		</file>
	</files>
	<moduleSets>
		<moduleSet>
			<!-- enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<!-- now, select which projects to include in this module-set. -->
			<includes>
				<include>com.alu.ems:comoam-web</include>
			</includes>
			<binaries>
				<outputDirectory>/server/webapps/</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping>ROOT.war</outputFileNameMapping>
				<fileMode>0755</fileMode>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
